<?php

/**
 * @file
 * Contains simple_ai_search.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function simple_ai_search_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the simple_ai_search module.
    case 'help.page.simple_ai_search':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Simple AI Search functionality with Gemini integration.') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function simple_ai_search_theme($existing, $type, $theme, $path) {
  // Register a template for AI-generated summaries.
  return [
    'ai_summary' => [
      'variables' => ['summary' => NULL],
    ],
  ];
}
